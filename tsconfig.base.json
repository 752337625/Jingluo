{
	"compilerOptions": {
		"outDir": "dist",
		"target": "es2018",
		"module": "esnext",
		"rootDir": ".",
		"baseUrl": ".",
		"sourceMap": false,
		"moduleResolution": "node",
		"allowJs": false,
		"strict": true,
		"noUnusedLocals": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"removeComments": false,

		"types": []
		// 全局变量
		// "paths": {
		// 	"@element-plus/*": ["packages/*"]
		// }
	},
	"exclude": ["node_modules", "dist", "**/*.js"]
}
