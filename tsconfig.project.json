{
	"extends": "./tsconfig.web.json",
	"compilerOptions": {
		"noEmit": true,
		"allowJs": true,
		"noLib": false,
		"forceConsistentCasingInFileNames": true,
		"strictFunctionTypes": false,
		"noUnusedParameters": true,
		"experimentalDecorators": true,
		"useDefineForClassFields": true,
		"isolatedModules": true
	},
	"include": [
		"project/**/*.ts",
		"project/**/*.d.ts",
		"project/**/*.tsx",
		"project/**/*.vue",
		"vite.config.ts"
	]
}
