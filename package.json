	"scripts": {
		"cz": "czg",
		"prepare": "husky install",
		"bootstrap": "pnpm install",
		"clean": "pnpm run clean:dist && pnpm run -r --parallel clean",
		"clean:cache": "rimraf node_modules/.cache/ && rimraf node_modules/.vite",
		"clean:dist": "rimraf dist",
		"lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx,.md,.json --max-warnings 0 --cache",
		"lint:fix": "pnpm run lint --fix",
		"format": "prettier --write --cache .",
		"client": "pnpm run -C  blog/client  serve",
		"client:build": "pnpm run -C  blog/client  build",
		"service": "pnpm run -C  blog/service  serve",
		"docs:serve": "pnpm run -F @jingluo/docs serve",
		"docs:build": "pnpm run -C docs build",
		"update:version": "pnpm outdated && pnpm update"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.4.4",
		"@commitlint/config-conventional": "^17.4.4",
		"@esbuild-kit/cjs-loader": "^2.4.2",
		"@typescript-eslint/eslint-plugin": "^5.52.0",
		"@typescript-eslint/parser": "^5.52.0",
		"@types/node": "*",
		"cz-git": "^1.5.0",
		"czg": "^1.5.0",
		"eslint": "^8.34.0",
		"concurrently": "^7.2.2",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-vue": "^8.7.1",
		"fast-glob": "^3.2.12",
		"husky": "^8.0.3",
		"lint-staged": "^13.1.2",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.4",
		"rimraf": "^3.0.2",
		"typescript": "^4.9.5"
	},
	"lint-staged": {
		"*.{vue,js,ts,jsx,tsx,json}": [
			"eslint --fix",
			"prettier --write"
		]
	}
}
